<%= form_with model: article do |form| %>
<div>
    <%= form.label :title %>
    <%= form.text_field :title %>
    <% article.errors.full_messages_for(:title).each do |message| %>
        <div><%= message %></div>
    <% end %>
</div>

<div>
    <%= form.label :body %>
    <%= form.text_area :body %>
    <% article.errors.full_messages_for(:body).each do |message| %>
        <div><%= message %></div>
    <% end %>
</div>

<div>
    <%= form.label :status %><br>
    <%= form.select :status, [ 'public', 'private', 'archive' ], selected: 
    'public' %>
</div>

<div>
    <%= form.label :user_id %><br>
    <%= form.select :user_id, User.all.map { |user| [user.user_name, user.id]} %>
<div>
    <%= form.submit %>
</div>
<% end %>